.main
  section
    .icon
      .i-case::before
        content ""
        position absolute
        top calc(50% - 1.53rem)
        left calc(50% - 1.1rem)
        border-radius 50%
        background-color #006cb4
        box-shadow inset 0 0 0 0.25rem white
        width 2.08rem
        height 2.08rem

      .i-case::after
        content ""
        position absolute
        top: calc(50% - 0.7rem)
        left calc(50% - 1.6rem)
        background-color white
        width 3.08rem
        height 2rem