@media (max-device-width 720px), (max-width 720px)
  .main
    section.software-content
      div.sec-content
        display block !important

        .progress-item
          width 100% !important

@media (max-width 830px)
  .main
    section.software-content
      div.sec-content
        display block !important

        .progress-item
          width 100% !important


.main
  section.software-content
    div.sec-content
      display flex
      flex-wrap wrap
      justify-content space-between

      .progress-item
        width 44.5%
        padding-bottom 0.5rem


        .progress-title
          font-size 2.14rem
          text-transform uppercase
          padding-bottom 1.7rem

        .progress
          height 1.7rem
          width 100%
          background-color #e7e7e7
          margin-bottom 1.83rem

          .progress-bar
            height 100%
            background-color #006cb4
            width 0

      //.progress-item:nth-child(2n)
        //float right

    .progress-item:last-child
      padding-bottom 0
      margin-bottom 0

  .icon
    .i-software::after
      content ""
      position absolute
      top 1.5rem
      left 1.33rem
      width 3.17rem
      height 2rem
      background-color #006cb4
      border-radius 0.42rem
      box-shadow inset 0 0 0 0.25rem white

    .i-software::before
      content ""
      position absolute
      top 3.75rem
      left 1.17rem
      width 3rem
      height 0
      border-left 0.25rem solid transparent
      border-right 0.25rem solid transparent
      border-bottom 0.5rem solid white