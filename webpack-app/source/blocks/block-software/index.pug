include ../mixins

mixin _fill_column(chunks)
    each chunk in chunks
        div.progress-item
            div.progress-title !{chunk.program}
            div.progress
                div(value=chunk.value).progress-bar

mixin resume-block-software(software)
    section
        +section-header('i-software', 'Software')
        div.sec-content
            div.software-content
                div.software-column
                    +_fill_column(software.left)
                div.software-column.s-separator
                div.software-column
                    +_fill_column(software.right)