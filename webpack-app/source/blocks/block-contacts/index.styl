.main
  section
    table.contacts
      border-collapse collapse
      margin-top 2rem

      td
        font-size 1.67rem
        padding-left 3.58rem
        padding-top 1.83rem
        padding-bottom 1.3rem

      tr:nth-child(1)
        td
          padding-top 0

      tr:nth:last-child
        td
          padding-bottom 0

      tr
        td.td-title
          text-transform uppercase
          color #006cb4
          font-size 1.67rem
          font-weight bold
          padding-left 0

    .icon
      .i-contacts
        content ""
        width 100%
        height 100%
        top 0
        position absolute
        background-image url("./contact.svg")
        background-repeat no-repeat
        background-position 50% 100%
        background-size 57%