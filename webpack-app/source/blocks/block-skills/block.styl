.main
  section.skills
    width 100%
    main-width 300px

    .skill
      width 78%
      margin 0 auto
      margin-top 0.83rem
      padding-bottom 1.5rem

      .skill-title
        text-align center
        text-transform uppercase
        font-size 25.5px
        padding 0

      .skill-progress
        width 100%
        min-width 260px
        max-width 400px
        margin 0 auto

        ul
          display flex
          flex-flow row
          justify-content space-between
          flex-wrap nowrap
          width 100%
          padding 0
          margin 0
          margin-top 15px
          height 1.41rem

          li
            list-style none
            width 1.41rem
            height 1.41rem
            background-color #006cb4
            border-radius 50%
            margin-left 0.33rem
            margin-right 0.33rem

          li:nth-last-child
            margin-right 0

          li:nth-child(1)
            margin-left 0

          li.active
            background-color #006cb4

          li.active ~ li
            background-color #e7e7e7

    .icon
      .i-skills
        content ""
        width 100%
        height 100%
        top 0
        position absolute
        background-image url("./skills.svg")
        background-repeat no-repeat
        background-position center
        background-size 47%