@media (max-device-width 720px), (max-width 720px)
  .main
    display block !important

    .left
      width 100% !important
      padding 0 !important

    .right
      width 100% !important
      padding 0 !important

.main
  font-family MyriadPro
  font-weight normal
  display flex
  margin 0 auto
  min-width 320px
  margin-top  7.33rem
  padding-left 38px
  padding-right 38px

  .text-black
    color black !important

  .text-blue
    color #006cb4 !important

  .left
    width 37%
    display flex
    flex-flow column
    padding-right 38px

  .right
    width 57%
    display flex
    flex-flow column
    padding-left 38px

  section
    width 100%
    display block
    margin 0 auto
    margin-bottom 3.16rem

    .sec-header
      display table
      height 6rem
      width 100%
      font-weight bold

      .icon
        display table-cell
        width 5.84rem
        padding-right 5.84rem
        background-color #006cb4
        border-radius 50%
        border 0.08rem solid #006cb4
        vertical-align middle
        box-shadow inset 0 0 0 0.25rem white
        position relative

      .title
        display table-cell
        vertical-align middle
        font-size 3.43rem
        text-transform uppercase
        color #006cb4
        padding-left 1.1rem

      .buffer-line
        width 100%
        display table-cell
        vertical-align middle
        padding-left 0.5rem

        .line
          height 0.42rem
          width 100%
          background-color #006cb4

    .sec-content
      padding-top 1.2rem
      line-height 1.45rem

      span
        font-size 1.29rem
        font-weight normal

  .places
    font-size 1.29rem
    padding-left 1.1rem
    line-height 2.08rem
    margin-top 1.1rem

    ul
      margin 0
      list-style none

    li
      padding-bottom 1.4rem
      position relative

    li:last-child
      padding-bottom 0

    li:not(:nth-child(1))
      margin-top 0

    .places-header
      font-size 2.14rem
      text-transform uppercase

      .places-title
        display flex
        flex-flow row
        flex-wrap wrap
        line-height: 2rem

        .title-1
          font-weight bold
          color #006cb4
          padding-right 1.25rem

        .period
          text-transform none

      .title-2
        padding-top 0.75rem

    .places-header::after
      content ""
      position absolute
      top 0;
      left -3.17rem
      background-color black
      width 1.67rem
      height 1.67rem
      border-radius 50%

    .places-content
      padding-top 0.8rem
      line-height 1.5rem